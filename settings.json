{
  "editor.scrollBeyondLastLine": false,
  "editor.fontFamily": "'Fira Code Medium'",
  // "editor.fontFamily": "'JetBrains Mono SemiBold'",
  "editor.fontWeight": "normal",
  "editor.fontLigatures": false,
  "editor.fontVariations": true,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.fontSize": 14,
  "editor.cursorStyle": "block",
  "editor.codeActionsOnSave": {},
  "editor.formatOnSave": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "breadcrumbs.enabled": false,
  "chat.commandCenter.enabled": false,
  "extensions.ignoreRecommendations": true,
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "custom",
  "workbench.activityBar.location": "hidden",
  "workbench.startupEditor": "none",
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.colorTheme": "Visual Studio 2017 Dark - C++",
  "workbench.colorCustomizations": {
    "tab.activeBorder": "#f5f5f5"
  },
  "workbench.iconTheme": "gruvbox-material-icon-theme",
  "zenMode.hideStatusBar": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.centerLayout": false,
  "terminal.integrated.fontSize": 17,
  "window.commandCenter": false,
  "window.zoomLevel": 0.5,
  "git.openRepositoryInParentFolders": "always",
  "go.lintOnSave": "package",
  "go.vetOnSave": "package",
  "go.vetFlags": ["-all", "-shadow"],
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "ui.semanticTokens": true
  },
  "go.addTags": {
    "tags": "json",
    "options": "json=omitempty",
    "promptForTags": false,
    "transform": "camelcase",
    "template": ""
  },
  "editor.lineNumbers": "relative",
  "[templ]": {
    "editor.defaultFormatter": "a-h.templ"
  },
  "tailwindCSS.includeLanguages": {
    "templ": "html"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnSave": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "prettier.printWidth": 80,
  "prettier.bracketSameLine": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vim.leader": "<space>",
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(250, 240, 170, 0.5)",
  "vim.highlightedyank.duration": 50,
  "vim.surround": true,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    // NAVIGATION
    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },

    // splits w/ groups
    {
      "before": ["leader", "v"],
      "commands": ["workbench.action.splitEditorToRightGroup"]
    },
    {
      "before": ["leader", "s"],
      "commands": ["workbench.action.splitEditorToBelowGroup"]
    },
    // move opened files to groups
    {
      "before": ["leader", "m", "r"],
      "commands": ["workbench.action.moveEditorToRightGroup"]
    },
    {
      "before": ["leader", "m", "s"],
      "commands": ["workbench.action.moveEditorToBelowGroup"]
    },
    {
      "before": ["leader", "m", "l"],
      "commands": ["workbench.action.moveEditorToLeftGroup"]
    },
    // panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.navigateLeft"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.navigateDown"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.navigateUp"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.navigateRight"]
    },
    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "p"], "commands": ["editor.action.formatDocument"] },
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["leader", "i"],
      "commands": ["extension.toggleBool"]
    },
    // Ident lines in normal mode
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },

    // Toggle Status Bar
    {"before": ["leader", "b"], "commands": ["workbench.action.toggleStatusbarVisibility"]},
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    // toggle comment selection
    {
      "before": ["leader", "c"],
      "commands": ["editor.action.commentLine"],
      "when": "editorTextFocus && !editorReadonly"
    }
  ],
}
